
<div class="container">
  <div class="row">
    <div class="col-sx-12 col-md-8">
      <div class="row">
        <div class="col-xs-12">
          <form action="/locations" method="get" class="form-inline padded">
            <button type="submit" class="btn btn-default">Street containers</button>
            <button type="submit" class="btn btn-default">Rooftop permaculture</button>
            <button type="submit" class="btn btn-default">Jardins partag√©s</button>
          </form>
        </div>
      </div>

      <% @locations.each do |location |%>
        <!-- <div class="row"> -->
          <div class="col-xs-12 col-md-6 padded">
            <div class="card card-location"
           style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= asset_url 'GYOF6' %>);">
              <div class="card-category"></div>
              <div class="card-description">
                <h2>
                  <%= location.city %>
                </h2>
                <p><%= location.description %></p>
              </div>
            </div>
          </div>
        <!-- </div> -->
      <% end %>
    </div>
    <div class="col-xs-12 col-md-4 padded">
      <div class="card card-location"
           style="background-image: url(<%= asset_url 'map' %>); width:500px" >
      </div>
      <div class="card card-location"
           style="background-image: url(<%= asset_url 'map' %>); width:500px" >
      </div>

      <div class="card card-location"
           style="background-image: url(<%= asset_url 'map' %>); width:500px" >
      </div>
      <div class="map">

        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({ internal: { id: 'map' } }, function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                } else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

      </div>
    </div>
</div>


